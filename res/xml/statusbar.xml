<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:settings="http://schemas.android.com/apk/res/com.android.settings"
    android:title="@string/statusbar_category"
    android:layout="@layout/tab" >

    <Preference
        android:key="status_bar_battery_style"
        android:title="@string/battery_title"
        android:fragment="org.lluvia.tormenta.fragments.StatusbarBatteryStyle" />

    <Preference
        android:key="network_traffic"
        android:title="@string/network_traffic_title"
        android:fragment="org.lluvia.tormenta.fragments.NetworkTraffic" />

    <org.lluvia.tormenta.preference.SystemSettingSwitchPreference
        android:key="double_tap_sleep_gesture"
        android:title="@string/double_tap_sleep_gesture_title"
        android:defaultValue="true" />

    <Preference
        android:key="quicksettings"
        android:title="@string/quicksettings_title"
        android:fragment="org.lluvia.tormenta.fragments.QuickSettings" />

    <Preference
            android:title="@string/statusbar_items_title" >
            <intent android:action="android.intent.action.MAIN"
                android:targetPackage="com.android.systemui"
                android:targetClass="com.android.systemui.tuner.StatusbarItemsActivity" />
    </Preference>

    <Preference
        android:key="various_statusbar"
        android:title="@string/various_statusbar_title"
        android:fragment="org.lluvia.tormenta.fragments.VariousStatusbar" />

</PreferenceScreen>
